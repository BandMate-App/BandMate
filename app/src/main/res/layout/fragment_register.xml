<?xml version="1.0" encoding="utf-8"?>

<!-- TODO FINISH MULTIPLE INSTRUMENT SELECTOR, PRIMARY INSTRUMENT SPINNER, FIX DIALOG BUTTON TEXT LOCATION -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">

    <ScrollView
        android:id="@+id/registerScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <!-- Outer Vertical Layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/registerUsername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="Username">
            </EditText>


            <!-- Inner layout 1: Firstname/Lastname -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">



            <EditText
                android:id="@+id/registerFirstName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="First Name">

            </EditText>

            <EditText
                android:id="@+id/registerLastName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:hint="Last Name">

            </EditText>

            </LinearLayout>

            <EditText
                android:id="@+id/registerEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Email"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/registerPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textAlignment="center">

            </EditText>


            <EditText
                android:id="@+id/registerPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/registerPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textAlignment="center">

            </EditText>

            <EditText
                android:id="@+id/datePickerPrompt"
                android:hint="Enter Birthday"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </EditText>


            <RadioGroup
                android:id="@+id/genderSelector"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/registerMale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textAlignment="center">

                </RadioButton>

                <RadioButton
                    android:id="@+id/registerFemale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textAlignment="center">

                </RadioButton>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Other"
                    android:textAlignment="center">

                </RadioButton>

            </RadioGroup>

            <Spinner
                android:id="@+id/registerPrimaryInstrument"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:entries="@array/instruments"
                android:textAlignment="center">
            </Spinner>

            <!--
            I Think it makes more sense to let the user pick 3 top genres
            put this here for now
            -->
            <Spinner
                android:id="@+id/registerPrimaryGenre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:entries="@array/genres"
                android:textAlignment="center">
            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some genre">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some genre">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some genre">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some genre">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some genre">

                </CheckBox>
            </LinearLayout>


            <!-- This needs to contain a group of checkboxes, user picks up to 3 secondary instruments
            -->
            <LinearLayout
                android:id="@+id/registerInstrumentPreference"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some instrument">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some instrument">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some instrument">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some instrument">

                </CheckBox>

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="some instrument">

                </CheckBox>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_margin="1dp"
                    android:id="@+id/registerSignUpButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sign Up">

                </Button>

                <Button
                    android:layout_margin="1dp"
                    android:id="@+id/registerCancelButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cancel">

                </Button>
            </LinearLayout>

            <!--
            Should we get zip code here? Could be a good placeholder until we figure out geolocation
            -->
        </LinearLayout>
    </ScrollView>


</RelativeLayout>